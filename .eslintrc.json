{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": [
      "./tsconfig.json",
      "./examples/async-generator/tsconfig.json",
      "./examples/todomvc/tsconfig.json"
    ],
    "createDefaultProgram": true
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "prettier",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "recommended-plus-types",
    "plugin:jest/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "arrowParens": "always",
        "useTabs": true,
        "bracketSpacing": false
      }
    ],
    "linebreak-style": ["error", "unix"],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1
  }
}
